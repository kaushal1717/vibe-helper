{
  "name": "cursorize",
  "version": "1.0.0",
  "description": "CLI tool to add cursor rules to your project",
  "type": "module",
  "bin": {
    "cursorize": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "homepage": "https://cursorize.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaushal1717/vibe-helper.git",
    "directory": "packages/cli"
  },
  "scripts": {
    "build": "tsc",
    "build:prod": "NODE_ENV=production tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "prepublish": "node scripts/prepublish.js",
    "prepublishOnly": "npm run prepublish && npm run build:prod",
    "postpublish": "node scripts/postpublish.js"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "cursor",
    "rules",
    "cli",
    "cursor-rules"
  ],
  "author": "",
  "license": "MIT"
}
