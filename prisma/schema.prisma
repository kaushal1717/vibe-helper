// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  user_id       String    @id @default(cuid()) @map("_id")
  name          String?
  email         String    @unique
  password      String?
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  rules         CursorRule[]
  sessions      Session[]
  accounts      Account[]
  likes         Like[]
  comments      Comment[]
  favorites     Favorite[]
}

model Session {
  id        String   @id @default(cuid()) @map("_id")
  userId    String
  user      User     @relation(fields: [userId], references: [user_id], onDelete: Cascade)
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Account {
  id                String   @id @default(cuid()) @map("_id")
  userId            String
  user              User     @relation(fields: [userId], references: [user_id], onDelete: Cascade)
  accountId         String
  providerId        String
  accessToken       String?
  refreshToken      String?
  idToken           String?
  expiresAt         DateTime?
  password          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([providerId, accountId])
  @@index([userId])
}

model CursorRule {
  id          String    @id @default(cuid()) @map("_id")
  title       String
  techStack   String
  description String?
  content     String
  isPublic    Boolean   @default(true)
  userId      String
  user        User      @relation(fields: [userId], references: [user_id], onDelete: Cascade)
  viewCount   Int       @default(0)
  copyCount   Int       @default(0)
  tags        String[]  @default([])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  likes       Like[]
  comments    Comment[]
  favorites   Favorite[]

  @@index([techStack])
  @@index([userId])
}

model Like {
  id        String   @id @default(cuid()) @map("_id")
  userId    String
  ruleId    String
  user      User     @relation(fields: [userId], references: [user_id], onDelete: Cascade)
  rule      CursorRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, ruleId])
  @@index([ruleId])
  @@index([userId])
}

model Comment {
  id        String   @id @default(cuid()) @map("_id")
  content   String
  userId    String
  ruleId    String
  user      User     @relation(fields: [userId], references: [user_id], onDelete: Cascade)
  rule      CursorRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ruleId])
  @@index([userId])
}

model Favorite {
  id        String   @id @default(cuid()) @map("_id")
  userId    String
  ruleId    String
  user      User     @relation(fields: [userId], references: [user_id], onDelete: Cascade)
  rule      CursorRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, ruleId])
  @@index([ruleId])
  @@index([userId])
}
