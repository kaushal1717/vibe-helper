// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  user_id       String    @id @default(cuid()) @map("_id")
  name          String?
  email         String    @unique
  password      String?
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  rules         CursorRule[]
  likes         Like[]
  comments      Comment[]
  favorites     Favorite[]
}

model CursorRule {
  id          String    @id @default(cuid()) @map("_id")
  title       String
  techStack   String
  description String?
  content     String
  isPublic    Boolean   @default(true)
  userId      String
  user        User      @relation(fields: [userId], references: [user_id], onDelete: Cascade)
  viewCount   Int       @default(0)
  copyCount   Int       @default(0)
  tags        String[]  @default([])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  likes       Like[]
  comments    Comment[]
  favorites   Favorite[]
  views       View[]
  copies      Copy[]

  @@index([techStack])
  @@index([userId])
}

model Like {
  id        String   @id @default(cuid()) @map("_id")
  userId    String
  ruleId    String
  user      User     @relation(fields: [userId], references: [user_id], onDelete: Cascade)
  rule      CursorRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, ruleId])
  @@index([ruleId])
  @@index([userId])
}

model Comment {
  id        String   @id @default(cuid()) @map("_id")
  content   String
  userId    String
  ruleId    String
  user      User     @relation(fields: [userId], references: [user_id], onDelete: Cascade)
  rule      CursorRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ruleId])
  @@index([userId])
}

model Favorite {
  id        String   @id @default(cuid()) @map("_id")
  userId    String
  ruleId    String
  user      User     @relation(fields: [userId], references: [user_id], onDelete: Cascade)
  rule      CursorRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, ruleId])
  @@index([ruleId])
  @@index([userId])
}

model RuleRequest {
  id            String    @id @default(cuid()) @map("_id")
  title         String
  techStack     String
  description   String?
  requestText   String    // User's detailed description of what they want
  userId        String    // Clerk user ID
  status        String    @default("PENDING") // PENDING, APPROVED, REJECTED, CHANGES_REQUESTED
  adminNotes    String?   // Admin's internal notes
  adminResponse String?   // Admin's response to the user
  reviewedBy    String?   // Clerk admin user ID
  reviewedAt    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([status])
  @@index([techStack])
}

model View {
  id        String   @id @default(cuid()) @map("_id")
  userId    String?
  ruleId    String
  user      User?    @relation(fields: [userId], references: [user_id], onDelete: Cascade)
  rule      CursorRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  sessionId String?  // For non-logged users, track by session/localStorage identifier
  createdAt DateTime @default(now())

  @@index([ruleId])
  @@index([userId])
  @@index([sessionId])
}

model Copy {
  id        String   @id @default(cuid()) @map("_id")
  userId    String?
  ruleId    String
  user      User?    @relation(fields: [userId], references: [user_id], onDelete: Cascade)
  rule      CursorRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  sessionId String?  // For non-logged users, track by session/localStorage identifier
  createdAt DateTime @default(now())

  @@index([ruleId])
  @@index([userId])
  @@index([sessionId])
}
